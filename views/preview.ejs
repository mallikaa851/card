document.getElementById('dlPdf').addEventListener('click', async () => {
  const node = document.querySelector('#cardWrap > div');

  // Capture card as canvas
  const canvas = await html2canvas(node, { useCORS: true, scale: 2 });
  const imgData = canvas.toDataURL('image/png');

  const { jsPDF } = window.jspdf;

  // Canvas size (px)
  const cardWpx = canvas.width;
  const cardHpx = canvas.height;

  // Convert px → mm (1px ≈ 0.264583 mm)
  const cardWmm = cardWpx * 0.264583;
  const cardHmm = cardHpx * 0.264583;

  // Orientation auto set
  const orientation = cardWmm > cardHmm ? 'landscape' : 'portrait';

  // Create PDF with same size
  const pdf = new jsPDF({
    orientation: orientation,
    unit: 'mm',
    format: [cardWmm, cardHmm]
  });

  // Add image covering whole PDF
  pdf.addImage(imgData, 'PNG', 0, 0, cardWmm, cardHmm);
  pdf.save('digital-card.pdf');
});

document.getElementById('dlVcf').addEventListener('click', () => {
  const name = "<%= userData.full_name %>" || "";
  const job = "<%= userData.job_title %>" || "";
  const phone = "<%= userData.phone %>" || "";
  const email = "<%= userData.email %>" || "";
  const website = "<%= userData.website %>" || "";
  const logoUrl = "<%= userData.logo %>" || "";   // Uploaded logo URL

  let vCardData = `BEGIN:VCARD\nVERSION:3.0\n`;

  if(name.trim() !== "") vCardData += `FN:${name}\n`;
  if(job.trim() !== "") vCardData += `TITLE:${job}\n`;
  if(phone.trim() !== "") vCardData += `TEL;TYPE=WORK,VOICE:${phone}\n`;
  if(email.trim() !== "") vCardData += `EMAIL:${email}\n`;
  if(website.trim() !== "") vCardData += `URL:${website}\n`;

  // 🔹 Logo proper handling (URL format)
  if(logoUrl.trim() !== ""){
    // URL-ஐ direct வைக்கலாம்
    vCardData += `LOGO;VALUE=URI:${logoUrl}\n`;
  }

  vCardData += `END:VCARD`;

  const blob = new Blob([vCardData], { type: "text/vcard" });
  const link = document.createElement("a");
  link.href = URL.createObjectURL(blob);
  link.download = "digital-card.vcf";
  link.click();
});

