  position: relative;
  background: linear-gradient(135deg, <%= userData.color_primary %>, <%= userData.color_secondary %>);
  color: <%= userData.text_color %>;
}

.card14-left, .card14-right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card14-logo img {
  width: 80px;
  height: 80px;
  border-radius: 12px;
  object-fit: contain;
}

.card14-name {
  font-size: 1.4em;
  font-weight: bold;
  display: block;    /* force line break */
}

.card14-title {
  font-size: 1.1em;
  margin-top: 6px;   /* spacing between name & job */
  display: block;
}

.card14-diagonal {
  position: absolute;
  top: 0; bottom: 0;
  left: 40%;
  width: 20%;
  background: rgba(255,255,255,0.2);
  transform: skewX(-20deg);
}

/* BACK */
.card14-back {
  transform: rotateY(180deg);
  background: linear-gradient(135deg, <%= userData.color_secondary %>, <%= userData.color_primary %>);
  color: <%= userData.text_color %>;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 18px;
  box-sizing: border-box;
}

.card14-back-panel {
  background: rgba(255,255,255,0.15);
  padding: 12px;
  border-radius: 12px;
  backdrop-filter: blur(3px);
  font-size: 0.95em;
  line-height: 1.5em;
}

.card14-back-qr img {
  width: 70px;
  height: 70px;
  background: #fff;
  padding: 5px;
  border-radius: 10px;
  align-self: flex-end;
  box-shadow: 0 2px 8px rgba(0,0,0,0.25);
}







.switch {
  position: relative;
  display: inline-block;
  width: 50px;
  height: 25px;
}

.switch input {
  opacity: 0; 
  width: 0;
  height: 0;
}

.slider {
  position: absolute;
  cursor: pointer;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: #ccc;
  transition: 0.4s;
  border-radius: 25px;
}

.slider:before {
  position: absolute;
  content: "";
  height: 20px;
  width: 20px;
  left: 3px;
  bottom: 3px;
  background-color: white;
  transition: 0.4s;
  border-radius: 50%;
}

input:checked + .slider {
  background-color: #2196F3;
}

input:checked + .slider:before {
  transform: translateX(24px);
}

  </style>
</head>
